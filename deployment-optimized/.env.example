# Database URL for Prisma (MySQL)
DATABASE_URL="mysql://USER:PASSWORD@HOST:PORT/DATABASE"

# JWT secret for signing tokens
JWT_SECRET="change_me_please"

# Cloudinary credentials
CLOUDINARY_CLOUD_NAME="your_cloud_name"
CLOUDINARY_API_KEY="your_api_key"
CLOUDINARY_API_SECRET="your_api_secret"

# App config
APP_URL="https://family.thelodgegroup.id/api"
FRONTEND_URL="https://family.thelodgegroup.id"

# QR code HMAC secret to secure payloads
QR_HMAC_SECRET="secure_qr_secret"

# Email SMTP (Hostinger example)
EMAIL_PROVIDER="smtp"
SMTP_HOST="smtp.hostinger.com"
SMTP_PORT="465"
SMTP_SECURE="true"
SMTP_USER="no-reply@thelodgegroup.id"
SMTP_PASS="your_email_password"
FROM_EMAIL="no-reply@thelodgegroup.id"
FROM_NAME="The Lodge Family"

# Xendit Payment Gateway
XENDIT_SECRET_KEY="xnd_production_your_secret_key"
XENDIT_WEBHOOK_TOKEN="your_webhook_verification_token"
XENDIT_PUBLIC_KEY="xnd_public_production_your_public_key"

# Production settings
NODE_ENV="production"
PORT="5001"